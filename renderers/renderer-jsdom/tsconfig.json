{
  "extends": "@bluelovers/tsconfig",
  "compilerOptions": {
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "declarationDir": "./types",
    "esModuleInterop": true,
    "outDir": "./es6",
    "rootDir": "./src"
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "./es5",
    "./es6",
    "./esm",
    "**.d.ts",
    "**.js",
    "./es5-autogenerated",
    "**/node_modules",
    "node_modules"
  ]
}
